<div class="modal" id="item-modal">
  <div class="modal-background"></div>
  <div class="modal-content">
    <div class="box">
      <div class="content">
        <h1>Add Your Item</h1>
        <%= form_for @item = Item.new, :html => {:multipart => true} do |f| %>

          <p>
            <%= f.label :name %><br />
            <%= f.text_field :name %>
          </p>
          <p>
            <%= f.label :description %><br />
            <%= f.text_area :description, :rows => 5, :cols => 45 %>
          </p>
          <p>
            <%= f.file_field :picture_url %>
          </p>
          <p>
            <%= f.label :remote_image_url, "or image URL" %><br />
            <%= f.text_field :remote_picture_url_url %>
          </p>
          <p><%= f.submit %></p>
        <% end %>
      </div>
    </div>
  </div>
  <button class="modal-close" id="item-modal-close"></button>
</div>
