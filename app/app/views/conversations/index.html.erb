<!DOCTYPE html>
<html>
<head>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
  <title>Mailbox / Matches</title>

  <script type="text/javascript">
  $( document ).ready(function() {
    $(".tab2").addClass('is-active');
  });
  </script>


</head>

<body>
  <section>
    <div class="container">
      <h1 class="title">Mailbox</h1>
      <div class="columns">
        <div class="column">
          <% @conversations.each do |conversation| %>
          <div class="notification is-info">
            <button class="delete"></button>

          </div>

          <% if conversation.sender_id == current_user.id || conversation.recipient_id == current_user.id %>
          <% if conversation.sender_id == current_user.id %>
          <% recipient = User.find(conversation.recipient_id) %>
          <% else %>
          <% recipient = User.find(conversation.sender_id) %>
          <% end %>
          <%= link_to recipient.name, conversation_messages_path(conversation)%>
          <% end %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="ui list">
      <div class="item">
        <% @conversations.each do |conversation| %>
        <% if conversation.sender_id == current_user.id || conversation.recipient_id == current_user.id %>
        <% if conversation.sender_id == current_user.id %>
        <% recipient = User.find(conversation.recipient_id) %>
        <% else %>
        <% recipient = User.find(conversation.sender_id) %>
        <% end %>
        <%= link_to recipient.name, conversation_messages_path(conversation)%>
        <% end %>
        <% end %>
      </div>
    </div>
  </div>
</section>



<div class="ui segment">
  <h3>Your matches !</h3>
  <div class="ui list">
    <% @items.each do |item| %>
    <%=item.name + ": "%>
    <div class="item">
      <%matches = item.get_all_item_matches%>
      <%matches.each do |match|%>
      <%user = User.find(match.user_id) %>
      <div class="box">
        <article class="media">
          <div class="media-left">
            <figure class="image is-64x64">
              <img src='<%=match.url%>' alt="Image">
            </figure>
          </div>
          <div class="media-content">
            <div class="content">
              <p>
                <strong><%= user.name %></strong>
                <br>
                <%=match.name%>
              </p>
            </div>


            <nav class="navbar">
              <div class="navbar-left">
                <a class="navbar-item">
                  <%= link_to conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post' do %>
                  <span class="icon is-small"><i class="fa fa-envelope"></i></span>
                  <% end %>
                </a>
              </div>
            </nav>
          </div>
        </article>
      </div>
      <%end%>
      <% end %>
    </div>
  </div>
</div>


</body>
